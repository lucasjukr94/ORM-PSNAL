
@{
    ViewBag.Title = "ListaExercicio";
}

@model PSNAL.Models.Unificador

<h2>ListaExercicio</h2>

<div class="col-xs-12">
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Alimentos</h3>
            <a style="float:right" href="@Url.Action("CriarExercicio","Exercise")" class="btn btn-success">Adicionar</a>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <table id="example1" class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Descrição</th>
                        <th>Áreas do Corpo</th>
                        <th>Cal/Min</th>
                        <th>Dificuldade</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in Model.ExercisesList)
                    {
                        <tr>
                            <td>@p.nome</td>
                            <td>
                                @p.descricao
                            </td>
                            <td>@p.area</td>
                            <td>@p.calpertime</td>
                            <td>@p.dificuldade</td>
                            <td style="text-align: center">
                                @using (Html.BeginForm("Delete", "Exercise", FormMethod.Post))
                                {
                                    @Html.Hidden("Id", p.Id)
                                    <button type="submit">
                                        <span><i class="fa fa-close"></i></span>
                                    </button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->
</div>