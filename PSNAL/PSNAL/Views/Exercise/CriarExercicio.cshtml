@model Objects.Geral.Exercises

@{
    ViewBag.Title = "CriarExercicio";
}

<h2>Adicionar Exercicio</h2>

<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Alimento</h3>
    </div>
    <!-- /.box-header -->
    <!-- form start -->
    <form action="@Url.Action("Adicionar","Exercise")" method="POST">
        <div class="box-body">
            <div class="form-group">
                <label>Nome</label>
                @Html.TextBoxFor(x => x.nome, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Descrição</label>
                @Html.TextBoxFor(x => x.descricao, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Áreas do Corpo</label>
                @Html.TextBoxFor(x => x.area, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Cal/Min</label>
                @Html.TextBoxFor(x => x.calpertime, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Dificuldade</label>
                @Html.TextBoxFor(x => x.dificuldade, new { @class = "form-control" })
            </div>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <a href="@Url.Action("ListaExercicio","Exercise")" class="btn btn-primary">Voltar</a>
            <button type="submit" class="btn btn-primary">Adicionar</button>
        </div>
    </form>
</div>
