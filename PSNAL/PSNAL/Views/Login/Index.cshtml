@model Objects.Geral.Usuario
@{
    Layout = "../Shared/MasterLogin.cshtml";
}

<div class="login-box">
    <div class="login-logo">
        PSNAL
    </div>
    <!-- /.login-logo -->
    <div class="login-box-body">
        <p class="login-box-msg">Sign in to start your session</p>
        @using (Html.BeginForm("Logar", "Login"))
        {
            <div class="form-group has-feedback">
                @Html.TextBox("login", null, new { id="login",placeholder="Login", @class="form-control" })
                <span class="glyphicon glyphicon-user form-control-feedback"></span>
                @Html.ValidationMessageFor(x => x.login)
            </div>
            <div class="form-group has-feedback">
                @Html.TextBox("senha", null, new { placeholder="Password",@class="form-control",type="password"})
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                @Html.ValidationMessageFor(x => x.senha)
            </div>
            <div class="row">
                <!-- /.col -->
                <div class="col-xs-4">
                    <button type="submit" class="btn btn-primary btn-block btn-flat">Sign In</button>
                </div>
                <!-- /.col -->
            </div>
        }
        <br/>
        <br/>
        <!-- /.social-auth-links -->
        <a href="#">I forgot my password</a><br>
        <a href="@Url.Action("Cadastrar","Login")" class="text-center">Register a new membership</a>
    </div>
    <!-- /.login-box-body -->
</div>
