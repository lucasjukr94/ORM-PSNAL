@using System.ServiceModel.Dispatcher
@model PSNAL.Models.Unificador

@{
    ViewBag.Title = "CriarDieta";
}

<h2>Criar Dieta</h2>

<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Dieta</h3>
    </div>
    <!-- /.box-header -->
    <!-- form start -->
    <form action="@Url.Action("AdicionarDieta","Diet")" method="POST">
        <div class="box-body">
            <div class="form-group">
                <label>Nome</label>
                @Html.TextBoxFor(x => x.dieta.nome, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Descrição</label>
                @Html.TextBoxFor(x => x.dieta.descricao, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label style="float: left;">Food&nbsp;</label>
                @Html.ListBoxFor(x => x.lista,new SelectList((List<SelectListItem>)ViewBag.ListaFood,"Value","Text",ViewBag.ListaFood),new{select = "multiple",style="width:200px;float:left"})
            </div>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <a href="@Url.Action("ListaDieta","Diet")" class="btn btn-primary">Voltar</a>
            <button type="submit" class="btn btn-primary">Adicionar</button>
        </div>
    </form>
</div>
