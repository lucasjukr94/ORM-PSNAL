@model Objects.Geral.Food

@{
    ViewBag.Title = "AddFood";
}

<h2>Adicionar Alimento</h2>

<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Alimento</h3>
    </div>
    <!-- /.box-header -->
    <!-- form start -->
    <form action="@Url.Action("Adicionar","Diet")" method="POST">
        <div class="box-body">
            <div class="form-group">
                <label>Nome</label>
                @Html.TextBoxFor(x => x.nome, new{@class="form-control"})
            </div>
            <div class="form-group">
                <label>Descrição</label>
                @Html.TextBoxFor(x => x.descricao, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Cal/Gram</label>
                @Html.TextBoxFor(x => x.calpergram, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Preço</label>
                @Html.TextBoxFor(x => x.preco, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Nutrientes</label>
                @Html.TextBoxFor(x => x.nutrientes, new { @class = "form-control" })
            </div>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <a href="@Url.Action("ListaFood","Diet")" class="btn btn-primary">Voltar</a>
            <button type="submit" class="btn btn-primary">Adicionar</button>
        </div>
    </form>
</div>

