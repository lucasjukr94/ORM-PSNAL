
@{
    ViewBag.Title = "ListaFood";
}

@model PSNAL.Models.Unificador

<h2>Lista de Alimentos</h2>

<div class="col-xs-12">
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Alimentos</h3>
            <a style="float:right" href="@Url.Action("AddFood","Diet")" class="btn btn-success">Adicionar</a>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <table id="example1" class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Descrição</th>
                        <th>Nutrientes</th>
                        <th>Cal/Gram</th>
                        <th>Preço Médio</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var p in Model.FoodList)
                {
                    <tr>
                        <td>@p.nome</td>
                        <td>
                            @p.descricao
                        </td>
                        <td>@p.nutrientes</td>
                        <td>@p.calpergram</td>
                        <td>@p.preco</td>
                        <td style="text-align: center">
                            @using (Html.BeginForm("Delete", "Diet", FormMethod.Post))
                            {
                                @Html.Hidden("Id",p.Id)
                                <button type="submit">
                                    <span><i class="fa fa-close"></i></span>
                                </button>
                            }
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->
</div>